@page "/product-price-print"
@model SuperfonMobileAPI.Pages.ProductPricePrintModel

 <!DOCTYPE html>

<html>
    <head>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        @*<link href='https://fonts.googleapis.com/css?family=Libre Barcode 128' rel='stylesheet'>*@
        @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
        <style>
               /* div#rotate{
                transform: rotate(90deg);
            }*/
             @@media print {
                html, body {
                    display: block; 
                    font-family: Arial;
                    margin: 0;
                }

                @@page {
                  size: 7.5cm 4.4cm;
                }
            }

        </style>
    </head>
    <body>
        <div style="width:7.4cm ; height:4.3cm ; font-family: Arial">
            <div style="width:96%; height:47%; text-align:left;">
                <b>
                    <div id="disp_name" style="font-size: 22px;word-wrap: break-word">@Model.Name</div>
               </b>
            </div>
            <div style="width:96%; height:17%; text-align:left; ">
                <b>
                    <div id="disp_code" style="font-size: 20px;">@Model.Code</div>
               </b>
            </div>
            <div style="width:100%; height:36%; text-align:center">
                <b>
                    <span id="disp_price"style="font-size: 40px ">@Model.Price</span>
               </b>
            </div>
        </div>
    </body>
     <script type="text/javascript">
           $(document).ready(function () {
               window.print();
           
            });
</script>
</html>
